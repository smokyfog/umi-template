{
  "private": true,
  "scripts": {
    "start": "umi dev",
    "build": "umi build",
    "dev-no-mock": "cross-env UMI_ENV=dev-no-mock umi dev",
    "build-dev": "cross-env UMI_ENV=prd-dev umi build",
    "postinstall": "umi generate tmp",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "test": "umi-test",
    "test:coverage": "umi-test --coverage"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@ant-design/pro-layout": "^6.5.0",
    "react": "17.x",
    "react-dom": "17.x",
    "umi": "^3.5.28"
  },
  "devDependencies": {
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@umijs/fabric": "^2.12.2",
    "@umijs/preset-react": "1.x",
    "@umijs/test": "^3.5.28",
    "cross-env": "^7.0.3",
    "eslint": "^8.19.0",
    "lint-staged": "^10.0.7",
    "prettier": "^2.2.0",
    "stylelint": "^14.9.1",
    "typescript": "^4.1.2",
    "yorkie": "^2.0.0"
  }
}
